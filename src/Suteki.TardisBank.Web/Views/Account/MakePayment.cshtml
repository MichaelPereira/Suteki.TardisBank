@model MakePaymentViewModel

@using Suteki.TardisBank.Web;

@{    
    Layout = "~/Views/Shared/SiteLayout.cshtml";
	var pageTitle = String.Format(Lang.FormatMakeAPaymentTo, Model.ChildName);
}
<h2>@pageTitle</h2>
<p>@Html.ValidationSummary()</p>
<div>
    @{ Html.BeginForm(); }
    @Html.HiddenFor(x => x.ChildId)
    @Html.HiddenFor(x => x.ChildName)
    <table>
        <tr>
            <td><label for="Description">@Lang.PaymentDescription</label></td>
            <td>@Html.TextBoxFor(x => x.Description)</td>
        </tr>
        <tr>
            <td><label for="Amount">@Lang.Amount @Current.CurrencySymbol</label></td>
            <td>@Html.TextBoxFor(x => x.Amount)</td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" value="@Suteki.TardisBank.Web.Lang.MakePayment" /></td>
        </tr>
    </table>
    @{ Html.EndForm(); }
</div>
